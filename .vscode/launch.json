// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Extensions",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/ui-extension",
				"--extensionDevelopmentPath=${workspaceFolder}/workspace-extension"
			],
			"outFiles": [
				"${workspaceFolder}/ui-extension/out/**/*.js",
				"${workspaceFolder}/workspace-extension/out/**/*.js"
			],
		},
		{
			"name": "Extension Tests",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/out/test/**/*.js"
			],
			"preLaunchTask": "${defaultBuildTask}"
		},
		{
			"name": "Watch Plugins and Run Extension Host",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/ui-extension",
				"--extensionDevelopmentPath=${workspaceFolder}/workspace-extension"
			],
			"outFiles": [
				"${workspaceFolder}/ui-extension/out/**/*.js",
				"${workspaceFolder}/workspace-extension/out/**/*.js"
			],
			"preLaunchTask": "${defaultBuildTask}",
		},
	]
}
